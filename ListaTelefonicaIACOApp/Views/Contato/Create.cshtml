@using ListaTelefonicaIACOApp.ViewModels.Contato
@model ContatoViewModel

@{
    ViewData["Title"] = "Adicionar Contato - IACO";
}

<header style="height: 50px" class="d-flex w-100 justify-content-start">

    <div class="d-flex justify-content-start align-items-center h-100 w-100">
        <a style="background-color: #f9f9f9;  border-radius: 5px; width: 60px; padding: 10px" class="d-flex h-100 justify-content-center align-items-center" asp-action="Index">
            <i style="font-size:30px" class="bi bi-arrow-left  text-dark"></i>
        </a>
    </div>  
</header>

<div style="padding:10px; gap:30px " class="d-flex flex-column">
    <h2>Adicionar novo contato</h2>

    <form id="formCadastrarContato" class="row" method="post" asp-action="Create" asp-controller="Contato" style="gap:30px">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @* ---------- Dados Pessoais ---------- *@
        <div class="row g-3 rounded-2 m-0 p-4" style="gap:20px;background-color: #f9f9f9">
            <h4>Dados Pessoais</h4>
            <div class="row">
                <div class="form-group col-md-4 min-height-90px-input">
                    <label asp-for="Nome"></label>
                    <input id="Nome" asp-for="Nome" class="form-control" placeholder="Ex: Ana" />
                    <span asp-validation-for="Nome" class="text-danger fs-12px"></span>
                </div>
                <div class="form-group col-md-4 min-height-90px-input">
                    <label asp-for="Sobrenome"></label>
                    <input id="Sobrenome" asp-for="Sobrenome" class="form-control " placeholder="Ex: Clara" />
                    <span asp-validation-for="Sobrenome" class="text-danger fs-12px"></span>
                </div>
                <div class="form-group col-md-4 min-height-90px-input">
                    <label asp-for="Fixo"></label>
                    <input id="Fixo" asp-for="Fixo" class="form-control telefone-fixo" placeholder="Ex: 11 2345-6789" />
                    <span asp-validation-for="Fixo" class="text-danger fs-12px"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6 min-height-90px-input">
                    <label asp-for="Celular"></label>
                    <input id="Celular" asp-for="Celular" class="form-control telefone-celular" placeholder="Ex: 11 998877665" />
                    <span asp-validation-for="Celular" class="text-danger fs-12px"></span>
                </div>
                <div class="form-group col-md-6 min-height-90px-input">
                    <label asp-for="Comercial"></label>
                    <input id="Comercial" asp-for="Comercial" class="form-control telefone-comercial" placeholder="Ex: 61 3030-4040" />
                    <span asp-validation-for="Comercial" class="text-danger fs-12px"></span>
                </div>
                <div class="form-group col-md-6 min-height-90px-input">
                    <label asp-for="Email"></label>
                    <input id="Email" asp-for="Email" class="form-control" placeholder="Ex: Ana.clara@iaco.com" />
                    <span asp-validation-for="Email" class="text-danger fs-12px"></span>
                </div>
            </div>
            

            <div class="form-group col-md-6 min-height-90px-input m-0">
                <label asp-for="EnderecoId" class="form-label"></label>

                <select asp-for="EnderecoId" asp-items="Model.Enderecos" class="form-select">
                    <option value="">Selecione um endereço</option>
                </select>

                <span asp-validation-for="EnderecoId" class="text-danger fs-12px"></span>
            </div>

            <div style="height:fit-content" class="row align-items-center ps-4">
                 
                <div class="d-flex w-100 justify-content-start p-0">
                    <i style="width:10px" class="bi bi-exclamation-circle p-0" data-bs-toggle='tooltip' data-bs-placement='top' title='Caso o seu endereço não exista, crie ele apertando no botao.'></i>
                </div>

                <a asp-controller="Endereco" asp-action="Create" class="btn btn-outline-secondary col-auto text-black d-flex align-items-center" style="min-width: 180px; height:50px">
                    Cadastrar Endereço
                </a>
            </div>
        </div>
        
        <div style="height:50px" class="row d-flex justify-content-end col-auto w-100">
            <button type="button" id="btnCadastrarContato" class="btn btn-primary h-100 col-auto" style="min-width: 180px">Cadastrar Contato</button>
        </div>
       
    </form>
</div>

<div class="toast-container position-fixed top-0 end-0 p-3" id="toastContainer"></div>



            

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>


    

    <script>
        $(document).ready(function () {
           
            aplicarMascaras();

            $('#btnCadastrarContato').on('click', function (e) {
                e.preventDefault();

                let formClone = $('#formCadastrarContato').clone(true, true);
                //const form = $('#formCadastrarContato');

                if (!formClone.valid()) return;

                
                // Remove máscara antes do envio
                //$('#Fixo').val($('#Fixo').cleanVal());
                //$('#Celular').val($('#Celular').cleanVal());
                //$('#Comercial').val($('#Comercial').cleanVal());

                formClone.find('#Fixo').val($('#Fixo').cleanVal());
                formClone.find('#Celular').val($('#Celular').cleanVal());
                formClone.find('#Comercial').val($('#Comercial').cleanVal());
                formClone.find('select[name="EnderecoId"]').val($('#EnderecoId').val());



                const formData = new FormData(formClone[0]);

                $.ajax({
                    url: formClone.attr('action'),
                    type: formClone.attr('method'),
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.sucesso) {
                            mostrarToast("Sucesso", "Contato cadastrado com sucesso!", "success");
                            setTimeout(() => {
                                window.location.href = '/Contato/Index';
                            }, 2000);
                        }
                    },
                    error: function (xhr) {
                        if (xhr.status === 409) {
                            const msg = xhr.responseJSON?.mensagem || "Já existe um contato com dados duplicados.";
                            mostrarToast("Duplicidade", msg, "warning");
                            //aplicarMascaras();

                        } else if (xhr.status === 400) {
                            // ✅ Erros de validação retornados do servidor
                            let erros = xhr.responseJSON;
                            let mensagens = '';

                            // Itera sobre cada campo com erro
                            for (const campo in erros) {
                                const mensagensCampo = erros[campo];
                                mensagensCampo.forEach(mensagem => {
                                    mensagens += `• ${mensagem}<br>`;
                                });
                            }

                            mostrarToast("Erros de Validação", mensagens, "danger");
                            //aplicarMascaras();

                        } else {
                            mostrarToast("Erro", "Erro inesperado ao cadastrar contato.", "danger");
                        }
                }

                });
            });
        });
         // ✅ Corrige o comportamento do erro que não some ao selecionar
        $('#EnderecoId').on('change', function () {
            $(this).valid();
        });
    </script>
}


