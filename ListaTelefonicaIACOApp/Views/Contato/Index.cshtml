@using ListaTelefonicaIACOApp.ViewModels
@model ContatoViewModel

@{
    ViewData["Title"] = "Agenda Telefônica - IACO";
}


<body>

    <header class="d-flex gap-3 
        justify-content-end 
        align-items-center"
    >
         
        <div class="d-flex justify-content-center" style="height: 70px; width: 70px; 
                background-color: #f9f9f9;  border-radius: 5px;"
                data-bs-toggle="tooltip" data-bs-placement="top" title="Adicionar Contato"
                >
            <a  class="d-flex justify-content-center" asp-action="Create">
                <i class="bi bi-person-plus text-dark icon-add-colaborador"> </i>
            </a>
        </div>
       




    </header>
    <div style="background-color: #f9f9f9; padding:20px; height:500px" class="p-4 rounded-3">
        <form id="formFiltro" asp-action="FiltrarPorColaboradores" method="post" class="d-flex row g-3 p-3 flex-column justify-content-center" style="height:500px">
            <div class="d-flex flex-column w-100 col-auto gap-3 m-0" style="padding:10px">
                <h2 class="col-auto border-1 border-bottom m-0">Filtros</h2>

                <div style="height:300px" class="row d-flex gap-2 gap-md-3 col-auto flex-row align-items-lg-center justify-content-sm-center overflow-auto">
                   

                   
                    <div class="d-flex gap-2 flex-column col-sm-12 col-md-6 campos-filtros">
                        <label asp-for="Nome" class="">Nome</label>
                        <input asp-for="Nome" type="text" class="form-control" id="Nome" placeholder="Ex: Ana">
                        <div id="erro" class="fs-12px">
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex gap-2 flex-column col-sm-12 col-md-6 campos-filtros">
                        <label asp-for="Sobrenome" class="">Sobrenome</label>
                        <input asp-for="Sobrenome" type="text" class="form-control" id="Sobrenome" placeholder="Ex: Clara">
                        <div id="erro" class="fs-12px">
                            <span asp-validation-for="Sobrenome" class="text-danger"></span>
                        </div>
                    </div>
                   
                   
                    <div class="d-flex gap-2 flex-column col-sm-12 col-md-6 campos-filtros">
                        <label asp-for="Fixo" class="">Fixo</label>
                        <input asp-for="Fixo" type="tel" class="form-control telefone-fixo" id="Fixo" placeholder="Ex: 11 2345-6789  ">
                        <div class="fs-12px">
                            <span asp-validation-for="Fixo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex gap-2 flex-column col-sm-12 col-md-6 campos-filtros">
                        <label asp-for="Celular" class="">Celular</label>
                        <input asp-for="Celular" type="tel" class="form-control telefone-celular" id="Celular" placeholder="Ex: 11 998877665">
                        <div class="fs-12px">
                            <span asp-validation-for="Celular" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex gap-2 flex-column col-sm-12 col-md-6 campos-filtros">
                        <label asp-for="Comercial" class="">Comercial</label>
                        <input asp-for="Comercial" type="tel" class="form-control telefone-comercial" id="Comercial" placeholder="Ex: 61 3030-4040">
                        <div class="fs-12px">
                            <span asp-validation-for="Comercial" class="text-danger"></span>
                        </div>
                    </div>
                    @{
                        /*
                          <div class="d-flex gap-2 flex-column col-sm-12 col-md-6 col-xl-8 campos-filtros">
                        <label asp-for="Endereco" class="d-flex justify-content-between">
                            <span>Endereco</span>
                            <div>
                                <i title="Ex: Rua das Flores, Centro, São Paulo - SP" class="bi bi-exclamation-circle">
                                    <span class="fs-12px">Dica de preenchimento</span>
                                </i>
                            </div>
                        </label>
                        <input asp-for="Endereco" type="text" class="form-control" id="Endereco" placeholder="Ex: Rua das Flores, Centro, São Paulo - SP">
                        <div class="fs-12px">
                            <span asp-validation-for="Endereco" class="text-danger"></span>
                        </div> 
                    </div>
                          
                         */
                    
                    }
                   
                    <div class="col-md-6 d-flex gap-2 flex-column col-sm-12 col-md-6 campos-filtros">
                        <label asp-for="Email" class="">Email</label>
                        <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="Ex: colaborador@iaco.com">
                        <div class="fs-12px">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>           
                    </div>
                </div>

                <div style="height:50px" class="d-flex w-100 justify-content-end align-items-center col-auto">
                    <button
                            id="btnFiltrar"
                            style="width:100px"
                            type="submit"
                            class="btn btn-primary h-75">Buscar</button>
                </div>
            </div>
        </form>
    </div>
    

   
    @if (Model != null && Model.Colaboradores.Any())
    {
        <div style="height:500px" class="table-responsive">
            <table id="table" class="table table-hover table-bordered m-0 h-75">
                
                <thead style="height:50px" class="table-light position-sticky top-0">
                    <tr itemscope>
                        <th class="text-nowrap">@Html.DisplayNameFor(model => model.Id)</th>
                        <th class="text-nowrap">@Html.DisplayNameFor(model => model.Nome)</th>
                        <th class="text-nowrap">@Html.DisplayNameFor(model => model.Fixo)</th>
                        <th class="text-nowrap">@Html.DisplayNameFor(model => model.Celular)</th>
                        <th class="text-nowrap">@Html.DisplayNameFor(model => model.Comercial)</th>
                        @{/*<th class="text-nowrap">@Html.DisplayNameFor(model => model.Endereco)</th> */}
                        <th class="text-nowrap">@Html.DisplayNameFor(model => model.Email)</th>
                        <th colspan="3"></th>
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Colaboradores)
                    {
                        <tr>
                            <td class="text-nowrap h-100 d-flex justify-content-center align-items-center">@Html.DisplayFor(modelItem => item.Id)</td>
                            <td class="text-nowrap">@Html.DisplayFor(modelItem => item.Nome)</td>
                            <td class="text-nowrap">@Html.DisplayFor(modelItem => item.Fixo)</td>
                            <td class="text-nowrap">@Html.DisplayFor(modelItem => item.Celular)</td>
                            <td class="text-nowrap">@Html.DisplayFor(modelItem => item.Comercial)</td>
                            @{/*<td class="text-nowrap">@Html.DisplayFor(modelItem => item.Endereco)</td>*/}
                            <td class="text-nowrap">@Html.DisplayFor(modelItem => item.Email)</td>
                            <td style="height: 50px" class="text-nowrap">
                                <a asp-action="Edit" asp-route-id="@item.Id" title="Editar">
                                    <i class="bi bi-pencil-square text-dark"></i>
                                </a>
                            </td>
                            <td style="height: 50px" class="text-nowrap">
                                <a asp-action="Details" asp-route-id="@item.Id" title="Ver detalhes">
                                    <i class="bi bi-eye text-dark"></i>
                                </a>
                            </td>
                            <td style="height: 50px" class="text-nowrap">
                                <a asp-action="Delete" asp-route-id="@item.Id" title="Deletar">
                                    <i class="bi bi-trash text-dark"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        

    }
    <div style="height: 60px" class="d-flex col-auto justify-content-end align-items-center">
        <nav class="" aria-label="Paginação">
            <ul class="pagination mb-0">


                @if (ViewBag.PaginaAtual > 1)
                {

                    <li class="page-item">
                        <a class="page-link" href="javascript:void(0)" data-pagina="@(ViewBag.PaginaAtual - 1)">Anterior</a>
                    </li>

                }else{
                      <li class="page-item disabled">
                        <a class="page-link" href="javascript:void(0)">Anterior</a>
                       </li>
                }


                @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                {
                    <li class="page-item @(i == ViewBag.PaginaAtual ? "active" : "")">
                        <a class="page-link" href="javascript:void(0)" data-pagina="@i">@i</a>

                    </li>
                }

                @if (ViewBag.PaginaAtual < ViewBag.TotalPaginas)
                {


                    <li class="page-item">
                        <a class="page-link" href="javascript:void(0)" data-pagina="@(ViewBag.PaginaAtual + 1)">Próximo</a>
                    </li>

                }else{
                    <li class="page-item disabled">
                        <a class="page-link" href="javascript:void(0)">Próximo</a>
                    </li>}

            </ul>
        </nav>

    </div>
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $(document).on('click', '.pagination .page-link', function (e) {
            e.preventDefault();

            let pagina = $(this).data('pagina');

            $.ajax({
                url: '/Contato/ObterColaboradoresPaginados',
                method: 'GET',
                data: { paginaAtual: pagina },
                success: function (response) {
                    $('#table tbody').html(response.html);

                    let paginacaoHtml = '';

                    if (response.paginaAtual > 1) {
                        paginacaoHtml += `
                            <li class="page-item">
                                <a class="page-link" href="javascript:void(0)" data-pagina="${response.paginaAtual - 1}">Anterior</a>
                            </li>`;
                    }
                    else{
                        paginacaoHtml += `
                            <li class="page-item disabled">
                                <a class="page-link" href="javascript:void(0)">Anterior</a>
                            </li>`;
                    }

                    for (let i = 1; i <= response.totalPaginas; i++) {
                        let activeClass = (i === response.paginaAtual) ? 'active' : '';
                        paginacaoHtml += `
                            <li class="page-item ${activeClass}">
                                <a class="page-link" href="javascript:void(0)" data-pagina="${i}">${i}</a>
                            </li>`;
                    }

                    if (response.paginaAtual < response.totalPaginas) {
                        paginacaoHtml += `
                            <li class="page-item">
                                <a class="page-link" href="javascript:void(0)" data-pagina="${response.paginaAtual + 1}">Próximo</a>
                            </li>`;
                    }
                    else{
                        paginacaoHtml += `
                            <li class="page-item disabled">
                                <a class="page-link" href="javascript:void(0)">Próximo</a>
                            </li>`;
                    }

                    $('.pagination').html(paginacaoHtml);
                },
                error: function () {
                    alert('Erro ao carregar os dados.');
                }
            });
        });

        });
    </script>


}