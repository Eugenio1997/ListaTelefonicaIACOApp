@model ListaTelefonicaIACOApp.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login - Lista Telefônica IACO";
}


<div class="row justify-content-center"">
    <div style="padding: 40px; background-color: #f9f9f9; min-width: 300px" class="col-md-6">
        <form class="d-flex flex-column" style="gap:40px" method="post" asp-controller="Autenticacao" asp-action="Login">
            
            <img class="align-self-center" height="80" width="80" src="~/images/IACO-logo.png" alt="IACO Logo" />
            <h1 class="align-self-center border-bottom-1 m-0">Entrar</h1>
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" placeholder="Ex: ana.clara" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div style="height: 50px" class="d-flex justify-content-between gap-2">
              
                <div>
                    <a class="col-auto d-flex h-100 justify-content-center align-items-center gap-1 btn btn-outline-secondary" asp-controller="Contato" asp-action="Index">
                        <i style="font-size:30px" class="bi bi-arrow-left  text-dark"></i>
                        Voltar para listagem
                    </a>
                </div>

                <div style="min-width:100px" class="form-group d-flex justify-content-end">
                    <input style="min-width:100px" type="submit" value="Enviar" class="btn btn-primary" />
                </div>
            </div>
           

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


        $("#form-login").on("submit", function (e) {
        e.preventDefault(); // evita envio padrão

        $.ajax({
            url: "/Autenticacao/login",
            type: "POST",
            data: $(this).serialize(),
            success: function (data) {
                alert(data.mensagem);
                window.location.href = "/Home/Index";
            },
            error: function (xhr) {
                if (xhr.status === 401) {
                    alert("Usuário ou senha inválidos.");
                } else if (xhr.status === 400) {
                    alert("Dados inválidos.");
                } else {
                    alert("Erro inesperado: " + xhr.statusText);
                }
            }
        });
    });


}


