@model ListaTelefonicaIACOApp.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login - Lista Telefônica IACO";
}

<!-- Fundo com imagem desfocada -->
<div class="bgTelaLoginIACOUsina"></div>

<div class="row d-flex justify-content-center">
    <div class="card col-10 col-sm-8 col-md-6 col-lg-5 col-xl-4">
        <img class="align-self-center rounded-3" height="150" width="150" src="~/images/IACO-logo.png" alt="IACO Logo" />
        <form style="padding-bottom:30px" id="form-login" class="card-body d-flex flex-column align-self-center gap-1 pt-0" method="post" asp-controller="Autenticacao" asp-action="Login">
            
            <h3 class="align-self-center border-bottom-1">Entrar</h3>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-group min-height-70px-login-input flex-column">
                <div class="d-flex">
                    <div style="height: 48px" class="input-group-prepend">
                        <span style="border-radius: 0.25rem 0 0 0.25rem" class="input-group-text h-100" id="Nome">
                            <i class="bi bi-person fs-5"></i>
                        </span>
                    </div>
                    <input asp-for="Nome" type="text" style="height: 48px; border-radius: 0 0.25rem 0.25rem 0" class="form-control" placeholder="Nome" aria-label="Nome" aria-describedby="Nome">
                </div>
                
                <span asp-validation-for="Nome" class="text-danger fs-12px"></span>
            </div>

            <div class="input-group min-height-70px-login-input flex-column">
                <div class="d-flex">
                    <div style="height: 48px" class="input-group-prepend">
                        <span style="border-radius: 0.25rem 0 0 0.25rem" class="input-group-text h-100" id="Senha">
                            <i class="bi bi-lock fs-5"></i>
                        </span>
                    </div>
                    <input asp-for="Senha" type="password" style="height: 48px; border-radius: 0 0.25rem 0.25rem 0" class="form-control" placeholder="Senha" aria-label="Senha" aria-describedby="Senha">
                </div>
                <span asp-validation-for="Senha" class="text-danger fs-12px"></span>

            </div>


               


               
            <div class="d-flex flex-column gap-4">
                <div style="height: 48px" class="w-100 form-group d-flex justify-content-end">
                    <input class="w-100 btn btn-primary h-100" type="submit" value="Enviar" />
                </div>
                <div style="height: 48px">
                    <a class="col-auto d-flex h-100 justify-content-center align-items-center gap-3 btn btn-outline-secondary" asp-controller="Contato" asp-action="Index">
                        <i style="font-size:30px" class="bi bi-arrow-left  text-black"></i>
                        <span class="text-black">
                            Voltar para listagem
                        </span>
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>


<div class="toast-container position-fixed top-0 end-0 p-3" id="toastContainer"></div>

@section Scripts {
    
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
            $("#form-login").on("submit", function (e) {
            e.preventDefault(); // evita envio padrão

             if (!$("#form-login").valid()) return;

            $("#form-login").find('input').each(function () {
                // 'this' refers to the current input element
                $(this).val($(this).val().trim());

            });

            $.ajax({
                url: "/Autenticacao/login",
                type: "POST",
                data: $(this).serialize(),
                success: function (data) {
                    mostrarToast("Sucesso", "Autenticacao realizada com sucesso!", "success");
                    setTimeout(() => {
                                window.location.href = '/Contato/Index';
                            }, 1000);
                },
                error: function (xhr) {
                    if (xhr.status === 401) {
                        mostrarToast("Falha no Login", "Usuário ou senha inválidos.", "danger");
                    } else if (xhr.status === 400) {
                        mostrarToast("Erro de Validação", "Por favor, verifique os dados informados.", "warning");
                    } else {
                        mostrarToast("Erro Inesperado", "Ocorreu um erro: " + xhr.statusText, "danger");
                    }
                }
            });
        });
    </script>
        


}


