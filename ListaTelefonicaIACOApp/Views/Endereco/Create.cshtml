@model ListaTelefonicaIACOApp.Models.Endereco

@{
    ViewData["Title"] = "Adicionar Endereço - IACO";
}

<header style="height: 50px" class="d-flex w-100 justify-content-start">
    <div class="d-flex justify-content-start align-items-center h-100 w-100">
        <a style="background-color: #f9f9f9; border-radius: 5px; width: 60px; padding: 10px"
           class="d-flex h-100 justify-content-center align-items-center" asp-controller="Contato" asp-action="Create">
            <i style="font-size:30px" class="bi bi-arrow-left text-dark"></i>
        </a>
    </div>
</header>

<div style="padding:10px; gap:30px" class="d-flex flex-column">
    <h2>Adicionar novo endereço</h2>

    <form id="formCadastrarEndereco" class="row" method="post" asp-action="Create" asp-controller="Endereco" style="gap:30px">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row g-3 rounded-2 m-0 p-4" style="gap:20px; background-color: #f9f9f9">
            <h4>Dados do Endereço</h4>

            <div class="form-group col-md-6">
                <label asp-for="Rua"></label>
                <input asp-for="Rua" class="form-control" placeholder="Ex: Rua das Flores" />
                <span asp-validation-for="Rua" class="text-danger fs-12px"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="Numero"></label>
                <input asp-for="Numero" class="form-control" placeholder="Ex: 123" />
                <span asp-validation-for="Numero" class="text-danger fs-12px"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="Bairro"></label>
                <input asp-for="Bairro" class="form-control" placeholder="Ex: Centro" />
                <span asp-validation-for="Bairro" class="text-danger fs-12px"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Cidade"></label>
                <input asp-for="Cidade" class="form-control" placeholder="Ex: São Paulo" />
                <span asp-validation-for="Cidade" class="text-danger fs-12px"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="CEP"></label>
                <input asp-for="CEP" class="form-control cep" placeholder="Ex: 01001-000" />
                <span asp-validation-for="CEP" class="text-danger fs-12px"></span>
            </div>

            <div class="form-group col-md-12">
                <label asp-for="Complemento"></label>
                <input asp-for="Complemento" class="form-control" placeholder="Ex: Apt 101, Bloco B" />
                <span asp-validation-for="Complemento" class="text-danger fs-12px"></span>
            </div>
        </div>

        <div class="row d-flex justify-content-end col-auto w-100">
            <button type="button" id="btnCadastrarEndereco" class="btn btn-primary h-100 col-auto" style="min-width: 180px">
                Cadastrar Endereço
            </button>
        </div>
    </form>
</div>

<div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
    <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="10000">
        <div class="d-flex gap-2 toast-header">
            <i style="color:green" class="bi bi-check-circle fs-6"></i>
            <strong class="me-auto text-success">Sucesso</strong>
        </div>
        <div class="toast-body text-success">
            Endereço cadastrado com sucesso.
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function () {

            $('#CEP').mask('00000-000');

            $('#btnCadastrarEndereco').on('click', function (e) {
                e.preventDefault();

                const form = $('#formCadastrarEndereco');

                if (!form.valid()) {
                    return;
                }

                $('#CEP').val($('#CEP').cleanVal());

                const formData = new FormData(form[0]);

                $.ajax({
                    url: form.attr('action'),
                    type: form.attr('method'),
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        var toastLiveExample = document.getElementById('liveToast');
                        var toast = new bootstrap.Toast(toastLiveExample);
                        toast.show();

                        setTimeout(() => {
                            window.location.href = '/Endereco/Index';
                        }, 2000);
                    },
                    error: function (xhr) {
                        console.error("Erro:", xhr.responseText);
                    }
                });
            });
        });
    </script>
}
