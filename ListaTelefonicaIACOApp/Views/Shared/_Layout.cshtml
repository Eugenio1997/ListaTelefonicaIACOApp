<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] </title>

    <link rel="stylesheet" href="~/ListaTelefonicaIACOApp.styles.css" asp-append-version="true" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Meu CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- CSS Select2 -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Google Fonts: Poppins -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">

    
</head>
<body>
    <header style="height:110px; min-width:600px">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="d-flex align-items-center justify-content-between gap-4 w-100 mx-2">
                <div class="d-flex align-items-center justify-content-start gap-2">
                    <a class="navbar-brand h-100 m-0" asp-area="" asp-controller="Contato" asp-action="Index">
                        <img height="80" width="80" src="~/images/IACO-logo.png" alt="IACO Logo" />
                    </a>
                    <span style="font-size: 25px" class="fw-bolder font-monospace">
                        Lista Telefônica
                    </span>
                </div>
                <div data-bs-toggle="tooltip" data-bs-placement="top" title="Navegar para a tela de listagem de endereços">
                    <a style="padding:20px; background-color:#f9f9f9; border-radius:5px; border:1px solid #f1f1f1" class="align-self-center navbar-brand h-100 m-0" asp-area="" asp-controller="Endereco" asp-action="Index">
                        Ver enderecos
                    </a>
                </div>
                

                
                
                @{
                    /*
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
               
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                    </div>
                    */
                }
                
            </div>
           
           
        </nav>
    </header>

    <!-- This section display the main content -->
    <div class="container">
        <main style="padding:50px; gap:30px" role="main" class="h-100 d-flex flex-column justify-content-evenly">
            @RenderBody()
        </main>
    </div>

    <footer style="min-width:500px" class="border-top footer text-muted">
        <div class="container">
            <a>&copy; 2025 - Lista Telefonica IACO</a>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- JS do Select2 -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <!--JQuery Mask-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <!--JS do Bootstrap-->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
