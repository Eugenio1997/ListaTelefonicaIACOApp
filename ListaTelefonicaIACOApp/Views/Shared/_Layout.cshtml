<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] </title>
    <link rel="icon" href="~/favicon.ico" />


    <link rel="stylesheet" href="~/ListaTelefonicaIACOApp.styles.css" asp-append-version="true" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Meu CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    

    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">

    
</head>


@{
        var isAuthenticated = User.Identity.IsAuthenticated;
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var isLoginPage = currentController == "Autenticacao" && currentAction == "Login";
}



<body>
     @if (!isLoginPage)
    {
        <header style="height:110px; min-width:600px">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
                <div class="d-flex align-items-center justify-content-between gap-4 w-100 mx-4">
                    <div class="d-flex align-items-center justify-content-start gap-2">
                        <a class="navbar-brand m-0" asp-area="" asp-controller="Contato" asp-action="Index">
                            <img height="100%" width="110" src="~/images/IACO-logo.png" alt="IACO Logo" />
                        </a>
                        <span style="font-size: 25px" class="fw-bolder">
                            Lista Telefônica
                        </span>
                    </div>

                    
                    @if (!isLoginPage)
                    {

                        <div class="btn-group dropstart">
                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                Ações
                            </button>
                            <ul class="dropdown-menu p-0" aria-labelledby="dropdownMenuButton">
                                @if (!isAuthenticated)
                                {
                                    <li style="height:40px">
                                        <a asp-controller="Autenticacao" asp-action="Login" class="dropdown-item d-flex h-100 align-items-center justify-content-center">Logar</a>
                                    </li>
                                }
                                else if (isAuthenticated)
                                {
                                    <li style="height:40px">
                                        <button id="btnLogout" class="dropdown-item d-flex h-100 align-items-center justify-content-center" type="button">Deslogar</button>
                                    </li>
                                }

                          </ul>
                        </div>
                    }
            </div>
           
           
            </nav>
        </header>
    }
    @if (isLoginPage)
    {
        <!-- This section display the main content -->
        <div style="height: calc(100vh - 60px);" class="container">
            <main style="gap: 30px" role="main" class="h-100 d-flex flex-column justify-content-evenly">
                @RenderBody()
            </main>
        </div>

    }
    else if (!isLoginPage)
    {
        <div class="container">
            <main style="padding:100px 50px 50px; gap:30px" role="main" class="h-100 d-flex flex-column justify-content-evenly">
                @RenderBody()
            </main>
        </div>
    }
    
   
    
    
     @if (!isLoginPage)
    {
        <footer style="min-width:500px" class="border-top footer text-muted">
            <div class="container">
                <a>&copy; 2025 - Lista Telefonica IACO</a>
            </div>
        </footer>
      } 
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!--JQuery Mask-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <!--JS do Bootstrap-->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



 <script>
    $(document).ready(function () {
        $("#btnLogout").on("click", function (e) {
            e.preventDefault();

            // Exibe o toast
            mostrarToast("Saindo...", "Logout realizado com sucesso!", "success");

            // Aguarda 1 segundo, depois redireciona manualmente
            setTimeout(function () {
                window.location.href = "/Autenticacao/Logout"; // Aqui chamamos o endpoint do logout
            }, 1000);
        });
    });
</script>